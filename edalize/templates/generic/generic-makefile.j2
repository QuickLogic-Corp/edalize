{%- endif %}

{% if pcf -%}
PCF_OPTS = -p ${PCF}
{%- endif %}

{% if xdc -%}
XDC_OPTS = -x ${XDC}
{%- endif %}

{% if sdc -%}
SDC_OPTS = -s ${SDC}
{%- endif %}

all:
			${TOOL} ${FLAGS} ${INCDIRS} ${VERILOG} ${SVERILOG}


